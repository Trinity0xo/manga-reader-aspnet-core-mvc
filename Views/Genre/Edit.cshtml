@model WEBTRUYEN.Models.Genre

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Cập nhật thể loại";
}

<nav class="mt-2 mb-4" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="text-decoration-none" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a class="text-decoration-none" asp-action="Index">Danh sách thể loại</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cập nhật thể loại</li>
    </ol>
</nav>

<h3 class="mb-5">Cập nhật thể loại</h3>

<div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 col-xl-4">
        <form asp-action="ConfirmEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="d-flex gap-3 flex-column flex-sm-row">
                <input type="submit" value="Cập nhật" class="btn btn-warning" />
                <a class="btn btn-success" asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
