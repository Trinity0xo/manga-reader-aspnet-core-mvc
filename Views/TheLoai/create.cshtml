@model WEBTRUYEN.Models.TheLoai

@{
  ViewData["Title"] = "Tạo mới";
}

<h2>Trang tạo mới thể loại</h2>
<hr />
<div class="row mb-3">
      <div class="col-md-4">
        <form asp-action="Create" method="post">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group mb-3">
            <label asp-for="Name">@Html.DisplayNameFor(model => model.Name)</label>
            <input  type="text" class="form-control" asp-for="Name" required />
          </div>
          <div class="form-group mb-3">
            <label asp-for="Description">@Html.DisplayNameFor(model => model.Description)</label>
            <textarea  type="text" class="form-control" asp-for="Description" required> </textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Tạo mới</button>
          </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Trở về
    </a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}