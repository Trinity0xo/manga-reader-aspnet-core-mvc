@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Dashboard";
}

<h3 class="mt-2 mb-4">DASHBOARD</h3>

<h2 class="mb-4">📊 Thống kê</h2>


<div class="row g-4">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card bg-primary text-white shadow-lg rounded-3">
            <div class="card-body text-center">
                <h4 class="fw-bold">📖 Truyện</h4>
                <p class="fs-1 fw-bold mb-2">@ViewBag.ComicCount</p>
                <hr class="border-light" />
                <a class="text-white text-decoration-none fw-semibold" asp-controller="Comic" asp-action="Index">Xem chi tiết →</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card bg-success text-white shadow-lg rounded-3">
            <div class="card-body text-center">
                <h4 class="fw-bold">🏷️ Thể loại</h4>
                <p class="fs-1 fw-bold mb-2">@ViewBag.GenreCount</p>
                <hr class="border-light" />
                <a class="text-white text-decoration-none fw-semibold" asp-controller="Genre" asp-action="Index">Xem chi tiết →</a>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card bg-secondary text-white shadow-lg rounded-3">
            <div class="card-body text-center">
                <h4 class="fw-bold">👥 Người dùng</h4>
                <p class="fs-1 fw-bold mb-2">@ViewBag.UserCount</p>
                <hr class="border-light" />
                <a class="text-white text-decoration-none fw-semibold" asp-controller="User" asp-action="Index">Xem chi tiết →</a>
            </div>
        </div>
    </div>
</div>


