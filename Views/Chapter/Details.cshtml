@model WEBTRUYEN.Models.Chapter

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Chapter Detail";
}

<h1>Trang chi tiết chương</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-controller="Comic" class="btn btn-warning" asp-action="Details" asp-route-id="@Model.ComicId">Back to List</a>
</div>
<hr />
<p>Các trang truyện</p>
<div id="imagePreviewContainer" class="d-flex flex-wrap">
    @if (Model.Pages != null && Model.Pages.Any())
    {
        @foreach (var item in Model.Pages.OrderByDescending(p => p.Id))
        {
            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" style="border-radius: 8px;width: 400px; object-fit:cover; margin-bottom:5px; margin-right: 10px; box-shadow:0px 2px 5px rgba(0,0,0,0.2)" />
        }
    }
</div>

