@model WEBTRUYEN.Models.Chapter

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Xóa chương";
}

<nav class="mt-2 mb-4" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Danh sách truyện</a></li>
        <li class="breadcrumb-item">
            <a asp-controller="Comic" asp-action="Details" asp-route-id="@Model.ComicId">Chi tiết truyện</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Xóa chương</li>
    </ol>
</nav>

<h3 class="mb-5">📚 Xóa chương ( Không thể khôi phục !!! )</h3>

<div>
    <h4>Thông tin chương</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
    
    <form asp-action="ConfirmDelete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-3">
            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
            <a asp-controller="Comic" asp-action="Details" class="btn btn-success" asp-route-id="@Model.ComicId">Quay lại</a>
        </div>
    </form>
</div>
<hr />
<p>Các trang truyện ( sau khi xác nhận xóa sẽ mất hết )</p>
<div id="imagePreviewContainer" class="d-flex flex-wrap">
    @if (Model.Pages != null && Model.Pages.Any())
    {
        @foreach (var item in Model.Pages.OrderByDescending(p => p.Id))
        {
            <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" style="border-radius: 8px;width: 400px; object-fit:cover; margin-bottom:5px; margin-right: 5px; box-shadow:0px 2px 5px rgba(0,0,0,0.2)" />
        }
    }
</div>

