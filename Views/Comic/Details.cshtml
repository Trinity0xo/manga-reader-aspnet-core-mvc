@model WEBTRUYEN.Models.Comic

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Detail Comic";
}

<h1>Trang chi tiết truyện</h1>

<div class="mt-5">
    <h4>Thông tin truyện</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoverUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.CoverUrl)" style="border-radius: 8px;width: 25%; object-fit:cover; margin-bottom:5px; box-shadow:0px 2px 5px rgba(0,0,0,0.2)" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genres)
        </dt>
        <dd class="col-sm-10">
            @(Model.Genres != null && Model.Genres.Any()
                        ? string.Join(", ", Model.Genres.Select(g => g.Name))
                        : "")
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>
</div>
<div class="d-flex gap-2">
    <a asp-action="Edit" class="btn btn-info" asp-route-id="@Model?.Id">Sửa</a>
    <a asp-action="Index" class="btn btn-warning">Quay lại</a>
</div>


<div class="mt-5">
    <h4>Chương</h4>
    <hr />
    <a asp-controller="Chapter" class="btn btn-primary" asp-action="Create" asp-route-comicId="@Model.Id">
        Thêm Chương Mới
    </a>
    <table class="table table-dark mt-3">
        @if (Model.Chapters != null && Model.Chapters.Any())
        {
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Chapters.FirstOrDefault().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Chapters.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Chapters.FirstOrDefault().CreatedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Chapters.FirstOrDefault().UpdatedDate)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Chapters)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedDate)
                        </td>
                        <td>
                            <a asp-controller="Chapter" class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                            <a asp-controller="Chapter" class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                            <a asp-controller="Chapter" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        }
        else
        {

            <p>Chưa có chương</p>

        }
    </table>
</div>