<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ADMIN - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #222;
            color: white;
        }

        .container-wrap{
            width: calc(100vw - 260px);

        }
        /* Sidebar */
        .sidebar {
            width: 260px;
            background-color: #333;
            padding: 20px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            transition: 0.3s;
        }

            .sidebar h3 {
                text-align: center;
                margin-bottom: 20px;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 12px;
                color: white;
                text-decoration: none;
                border-radius: 5px;
                margin-bottom: 10px;
                background: #444;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background: #ffc107;
                    color: black;
                }

                .sidebar a i {
                    width: 20px;
                    margin-right: 10px;
                }

            /* Khi thu nhỏ sidebar */
            .sidebar.collapsed {
                width: 80px;
            }

                .sidebar.collapsed a {
                    justify-content: center;
                }

                    .sidebar.collapsed a i {
                        margin-right: 0;
                    }

                .sidebar.collapsed h3 {
                    display: none;
                }

        /* Nội dung chính */
        .content {
            margin-left: 260px;
            flex-grow: 1;
            padding: 20px;
            transition: 0.3s;
        }

        .collapsed + .content {
            margin-left: 80px;
        }

        /* Nút thu nhỏ sidebar */
        .toggle-btn {
            position: fixed;
            top: 20px;
            left: 270px;
            background: #ffc107;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
            transition: 0.3s;
        }

        .collapsed + .toggle-btn {
            left: 90px;
        }

        .card {
            background: #444;
            color: white;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
        }

        .table-dark th, .table-dark td {
            text-align: center;
        }

        .btn-sm {
            padding: 5px 10px;
        }

    </style>
</head>
<body>



    <div class="container-wrap">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <h3>📖 Admin Panel</h3>
            <a asp-action="Index" asp-controller="Comic"><i class="fas fa-book"></i> Quản lý truyện</a>
            <a asp-action="Index" asp-controller="User"><i class="fas fa-users"></i> Quản lý người dùng</a>
            <a asp-action="Index" asp-controller="Genre"><i class="fas fa-cogs"></i> Quản lý thể loại</a>
            <a href="#"><i class="fas fa-sign-out-alt"></i> SignOut</a>
        </div>

        <!-- Nút thu nhỏ Sidebar -->
        @* <button class="toggle-btn" id="toggle-btn">≡</button> *@

        <!-- Nội dung chính -->
        <div class="content container-fluid w-100" id="main-content">
            @* <h2>📊 Dashboard - Thống kê</h2> *@
            @* <div class="row mt-4"> *@
            @*     <div class="col-md-4"> *@
            @*         <div class="card"> *@
            @*             <h4>📖 Tổng số truyện</h4> *@
            @*             <p class="fs-4">120</p> *@
            @*         </div> *@
            @*     </div> *@
            @*     <div class="col-md-4"> *@
            @*         <div class="card"> *@
            @*             <h4>👥 Tổng người dùng</h4> *@
            @*             <p class="fs-4">4,500</p> *@
            @*         </div> *@
            @*     </div> *@
            @*     <div class="col-md-4"> *@
            @*         <div class="card"> *@
            @*             <h4>🔥 Lượt đọc hôm nay</h4> *@
            @*             <p class="fs-4">15,000</p> *@
            @*         </div> *@
            @*     </div> *@
            @* </div> *@
                @RenderBody()
        </div>
    </div>


</body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</html>


