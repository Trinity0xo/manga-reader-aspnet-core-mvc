@using Microsoft.AspNetCore.Identity
@using WEBTRUYEN.Repository

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web truyện</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/authLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEBTRUYEN.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>
    <div class="container">
        <div class="d-flex justify-content-center align-items-center py-5">
            <h2><a asp-controller="Home" asp-action="Index" class="text-decoration-none">WEBTRUYEN</a></h2>
        </div>
        @RenderBody()
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/homeLayout.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</html>
