                <label>Quyền hạn</label>
                <div> 
                    <select name="SelectedRole" class="form-control">
                        @foreach (var role in ViewBag.AllRoles)
                        {
                            <option value="@role" selected="@(role == ViewBag.UserRole ? "selected" : null)">
                                @role
                            </option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

