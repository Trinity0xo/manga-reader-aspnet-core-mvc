}

<h1>Edit</h1>

<h4>User</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @* <div class="form-group"> *@
            @*     <label asp-for="FirstName" class="control-label"></label> *@
