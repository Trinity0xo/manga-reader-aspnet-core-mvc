@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card p-3 rounded-0 shadow-sm" style="max-width: 500px; width: 100%">
    <a href="/" class="text-decoration-none text-center mb-3 p-0"><h1 class="p-0 m-0">MANGAR</h1></a>
    <form id="account" method="post">
        <h5 class="text-center">Đăng nhập</h5>
        <hr />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <div class="form-input mb-3">
            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" class="form-control my-input" autocomplete="username" aria-required="true"
                   placeholder="example@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-input mb-3">
            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" class="form-control my-input" autocomplete="current-password"
                   aria-required="true" placeholder="Mật khẩu" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
         
        <div class="d-flex justify-content-between flex-wrap gap-3 mb-2">
            <div class="checkbox">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>


            <a class="text-decoration-none" asp-page="./ForgotPassword">Quên mật khẩu ?</a>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-primary mb-3 my-button">
                Đăng nhập
            </button>
        </div>

        <p class="m-0">
            Chưa có tài khoản ? <a class="text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký</a>
        </p>
    </form>

    <div class="mt-3">
        <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <button type="submit" class="btn btn-dark w-100 d-flex align-items-center justify-content-center gap-2" name="provider" value="Google">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                    <path d="M15.545 6.558a9.4 9.4 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.7 7.7 0 0 1 5.352 2.082l-2.284 2.284A4.35 4.35 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.8 4.8 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.7 3.7 0 0 0 1.599-2.431H8v-3.08z" />
                </svg> Đăng nhập với Google
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
