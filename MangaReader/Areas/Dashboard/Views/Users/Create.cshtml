@model MangaReader.Dto.User.CreateUserDto

@{
    ViewData["Title"] = "Người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var Roles = ViewBag.Roles as List<MangaReader.Models.Role>;

}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item">
            <a class="text-decoration-none" asp-area="Dashboard" asp-controller="Home" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a class="text-decoration-none" asp-area="Dashboard" asp-controller="Users" asp-action="Index">Người dùng</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Tạo mới</li>
    </ol>
</nav>


<h3 class="mb-0">Tạo người dùng mới</h3>

<div class="card shadow-sm p-3 rounded-0">
    <form asp-action="Create" class="d-flex flex-column gap-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="d-flex flex-column flex-md-row">
            <label asp-for="FirstName" style="max-width: 300px" class="w-100 control-label"></label>
            <div class="d-flex flex-column w-100">
                <input asp-for="FirstName" class="form-control" placeholder="Tên" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row">
            <label asp-for="LastName" style="max-width: 300px" class="w-100 control-label"></label>
            <div class="d-flex flex-column w-100">
                <input asp-for="LastName" class="form-control" placeholder="Họ" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row">
            <label asp-for="Email" style="max-width: 300px" class="w-100 control-label"></label>
            <div class="d-flex flex-column w-100">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row">
            <label asp-for="Password" style="max-width: 300px" class="w-100 control-label"></label>
            <div class="d-flex flex-column w-100">
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row">
            <label asp-for="ConfirmPassword" style="max-width: 300px" class="w-100 control-label"></label>
            <div class="d-flex flex-column w-100">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>


        <div class="d-flex flex-column flex-md-row">
            <label asp-for="RoleId" style="max-width: 300px" class="w-100 control-label"></label>
            <div class="d-flex flex-column w-100">
                <select asp-for="RoleId" class="form-select">
                    <option value="">Chọn vai trò</option>
                    @if (Roles != null)
                    {
                        @foreach (var role in Roles)
                        {
                            <option value="@role.Id">@role.DisplayName</option>
                        }
                    }
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row">
            <div style="max-width: 300px" class="w-100"></div>
            <div class="d-flex flex-column flex-sm-row gap-2 mt-2 mt-md-0">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-area="Dashboard" asp-controller="Users" asp-action="Index">Quay lại</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
